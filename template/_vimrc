nmap <F5> :call A()<CR>
func A()
	exec "wa"
	if &filetype == 'cpp'
		exec "!g++ % -o %< -Wall -std=c++11 && %<"
	elseif &filetype == 'python'
		exec "!python3 %"
	endif
endfunc

set nocompatible
set backspace=indent,eol,start

set autoindent
set cindent
set tabstop=4
set shiftwidth=4

set nu
set ruler
set cursorline

syntax on
colorscheme torte
